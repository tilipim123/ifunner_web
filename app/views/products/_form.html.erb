<%= form_for @product, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-lg-12 text-center">
      <form id="contactForm" name="sentMessage" novalidate="novalidate">
        <div class="row" style="width: 50%; margin-left: 25%">
          <div class="col-lg-12 text-center">
            <div class="form-group">
              <%= f.label :business_name, 'Nome da empresa', class: 'sr-only' %>
              <%= f.text_field :business_name, autofocus: true, class: 'form-control', placeholder: 'Nome da empresa' %>
            </div>
            <div class="form-group">
              <%= f.label :title, 'Título', class: 'sr-only' %>
              <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Título' %>
            </div>
            <div class="form-group">
              <%= f.label :price, 'Preço', class: 'sr-only' %>
              <%= f.number_field :price, autofocus: true, class: 'form-control', placeholder: 'Preço' %>
            </div>
            <div class="form-group">
              <%= f.label :description, 'Descrição', class: 'sr-only' %>
              <%= f.text_area :description, autocomplete: "off", class: 'form-control', placeholder: 'Descrição' %>
            </div>
            <div class="form-group">
              <%= f.label :image, 'Upload da Imagem', style: 'color: white' %>
              <%= f.file_field :image, autocomplete: "off", class: 'fileupload', style: 'color: #fe5722; font-size: 15px',  placeholder: 'Upload Imagem' %>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="col-lg-12 text-center" style="padding: 20px;">
            <div id="success"></div>
            <%= f.button "SALVAR", class: 'btn btn-lg btn-primary btn-block' %>
            <%= link_to 'CANCELAR', products_path, class:'btn btn-lg btn-primary btn-block' %>
          </div>
        </div>
<% end %>
</form>
</div>
</div>

