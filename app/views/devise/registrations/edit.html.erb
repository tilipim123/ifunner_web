<body id="page-top">
  <section class="page-section" id="contact" style="background-image: none;">
    <div class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase" style="padding: 20px;">Editar Conta</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 text-center">
            <form id="contactForm" name="sentMessage" novalidate="novalidate">
              <div class="row" style="width: 50%; margin-left: 25%">
                <div class="col-lg-12 text-center">
                  <div class="form-group">
                    <%= f.label :name, 'Nome', class: 'sr-only' %>
                    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Nome' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email, 'Email', class: 'sr-only' %>
                    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
                  </div>
                  <div class="form-group">
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.label :current_password, 'Senha Atual', class: 'sr-only' %>
                    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Senha Atual' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password, 'Nova Senha', class: 'sr-only' %>
                    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Nova Senha' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password_confirmation, 'Confirmar Nova Senha', class: 'sr-only' %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmar Nova Senha' %>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center" style="padding: 20px;">
                  <div id="success"></div>
                  <%= f.button "ATUALIZAR", class: 'btn btn-lg btn-primary btn-block' %>
                </div>
              </div>
      <% end %>
      </form>
      <hr style="color: white" />
      <h3 class="section-heading text-uppercase" style="padding: 20px;">Cancelar Minha Conta</h3>
      <p style="color: white">Insatisfeito? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>
      </div>
      </div>
    </div>
  </section>
</body>
